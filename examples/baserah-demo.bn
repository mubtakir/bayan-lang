// ============================================
// 1. المعادلة الأم - Mother Equation
// ============================================

// إنشاء كائن بالمعادلة الأم
// O = (id, Φ, Ψ(t), Γ)

دالة مثال_المعادلة_الأم() {
  // إنشاء كرة
  متغير كرة = معادلة_أم("كرة_1");
  
  // تعيين الخصائص الثابتة (Φ)
  كرة.خاصية_ثابتة("اسم", "كرة قدم");
  كرة.خاصية_ثابتة("مادة", "جلد");
  كرة.خاصية_ثابتة("نوع", "رياضية");
  
  // تعيين الحالات المتغيرة (Ψ)
  كرة.حالة("موقع", "أرض");
  كرة.حالة("درجة_حرارة", 25);
  كرة.حالة("سرعة", 0);
  
  // تحديث الحالات عبر الزمن
  كرة.حدث_حالة("موقع", "هواء");
  كرة.حدث_حالة("سرعة", 20);
  
  // الحصول على حالة في زمن سابق
  متغير موقع_قديم = كرة.حالة_في_زمن(0, "موقع");
  اطبع("الموقع القديم: " + موقع_قديم); // "أرض"
  
  // الحصول على الحالة الحالية
  متغير موقع_حالي = كرة.حالة("موقع");
  اطبع("الموقع الحالي: " + موقع_حالي); // "هواء"
}

// ============================================
// 2. المشغلات اللغوية - Linguistic Operators
// ============================================

// 2.1 مشغل الانتقال - Go Operator
دالة مثال_الانتقال() {
  متغير شخص = معادلة_أم("أحمد");
  
  // انتقال من البيت إلى المدرسة
  انتقل(شخص, "بيت", "مدرسة");
  
  اطبع("الموقع: " + شخص.حالة("موقع")); // "مدرسة"
  اطبع("الموقع السابق: " + شخص.حالة("موقع_سابق")); // "بيت"
}

// 2.2 مشغل التأثير - Affect Operator
دالة مثال_التأثير() {
  متغير لاعب = معادلة_أم("لاعب");
  متغير كرة = معادلة_أم("كرة");
  
  // اللاعب يضرب الكرة
  أثر(لاعب, كرة, "سرعة", 30);
  
  اطبع("سرعة الكرة: " + كرة.حالة("سرعة")); // 30
  اطبع("آخر فعل للاعب: " + لاعب.حالة("آخر_فعل")); // "أثر على كرة"
}

// 2.3 مشغل التحول - Transform Operator
دالة مثال_التحول() {
  متغير ماء = معادلة_أم("ماء");
  
  // تحول الماء إلى بخار
  متغير تحولات = {
    "حالة": "بخار",
    "درجة_حرارة": 100,
    "كثافة": 0.6
  };
  
  حول(ماء, تحولات);
  
  اطبع("حالة الماء: " + ماء.حالة("حالة")); // "بخار"
  اطبع("درجة الحرارة: " + ماء.حالة("درجة_حرارة")); // 100
}

// 2.4 مشغل الإنشاء - Create Operator
دالة مثال_الإنشاء() {
  متغير خشب = معادلة_أم("خشب");
  متغير مسامير = معادلة_أم("مسامير");
  متغير غراء = معادلة_أم("غراء");
  
  // صنع طاولة من المكونات
  متغير وصفة = {
    "نوع": "طاولة",
    "لون": "بني",
    "ارتفاع": 75,
    "عرض": 120
  };
  
  متغير طاولة = أنشئ([خشب, مسامير, غراء], وصفة);
  
  اطبع("تم إنشاء: " + طاولة.خاصية_ثابتة("نوع")); // "طاولة"
  اطبع("اللون: " + طاولة.حالة("لون")); // "بني"
}

// 2.5 مشغل الدمج - Merge Operator
دالة مثال_الدمج() {
  متغير محلول1 = معادلة_أم("محلول1");
  متغير محلول2 = معادلة_أم("محلول2");
  
  محلول1.حالة("تركيز", 10);
  محلول2.حالة("تركيز", 20);
  
  // دمج المحلولين (متوسط)
  متغير محلول_مدمج = ادمج([محلول1, محلول2], "متوسط");
  
  اطبع("التركيز المدمج: " + محلول_مدمج.حالة("تركيز")); // 15
}

// 2.6 مشغل التفكيك - Decompose Operator
دالة مثال_التفكيك() {
  متغير كعكة = معادلة_أم("كعكة");
  كعكة.حالة("كتلة", 1000); // 1000 جرام
  
  // تقسيم الكعكة إلى 4 قطع
  متغير قطع = فكك(كعكة, 4);
  
  لكل (متغير قطعة في قطع) {
    اطبع("كتلة القطعة: " + قطعة.حالة("كتلة")); // 250 جرام
  }
}

// 2.7 مشغل التفاعل - Interact Operator
دالة مثال_التفاعل() {
  متغير ذرة1 = معادلة_أم("ذرة1");
  متغير ذرة2 = معادلة_أم("ذرة2");
  
  ذرة1.حالة("طاقة", 100);
  ذرة2.حالة("طاقة", 50);
  
  // تبادل الطاقة
  تفاعل(ذرة1, ذرة2, "تبادل");
  
  اطبع("طاقة ذرة1: " + ذرة1.حالة("طاقة")); // 50
  اطبع("طاقة ذرة2: " + ذرة2.حالة("طاقة")); // 100
}

// 2.8 مشغل الاحتواء والإطلاق
دالة مثال_الاحتواء() {
  متغير صندوق = معادلة_أم("صندوق");
  متغير كتاب = معادلة_أم("كتاب");
  متغير قلم = معادلة_أم("قلم");
  
  // وضع الأشياء في الصندوق
  احتوي(صندوق, كتاب);
  احتوي(صندوق, قلم);
  
  متغير محتويات = صندوق.حالة("محتويات");
  اطبع("عدد المحتويات: " + محتويات.طول); // 2
  
  // إخراج الكتاب
  أطلق(صندوق, كتاب);
  
  اطبع("الكتاب محرر: " + كتاب.حالة("محرر")); // true
}

// ============================================
// 3. المعادلات اللغوية - Linguistic Equations
// ============================================

// 3.1 تحليل وتنفيذ جملة بسيطة
دالة مثال_معادلة_لغوية() {
  // إنشاء محرك المعادلات
  متغير محرك = محرك_معادلات_لغوية();
  
  // تسجيل الكائنات
  متغير أحمد = معادلة_أم("أحمد");
  متغير كرة = معادلة_أم("الكرة");
  
  محرك.سجل_كائن("أحمد", أحمد);
  محرك.سجل_كائن("الكرة", كرة);
  
  // تنفيذ جملة
  متغير نتيجة = محرك.نفذ_جملة("ضرب أحمد الكرة");
  
  اطبع("نجح: " + نتيجة.نجح); // true
  اطبع("الرسالة: " + نتيجة.رسالة);
}

// 3.2 سلسلة من الجمل
دالة مثال_سلسلة_جمل() {
  متغير محرك = محرك_معادلات_لغوية();
  
  // إنشاء الكائنات
  متغير علي = معادلة_أم("علي");
  متغير كتاب = معادلة_أم("كتاب");
  متغير محمد = معادلة_أم("محمد");
  
  محرك.سجل_كائن("علي", علي);
  محرك.سجل_كائن("كتاب", كتاب);
  محرك.سجل_كائن("محمد", محمد);
  
  // تنفيذ سلسلة من الأحداث
  محرك.نفذ_جملة("أعطى علي كتاب");
  محرك.نفذ_جملة("نقل كتاب محمد");
  
  اطبع("مالك الكتاب: " + كتاب.حالة("ملكية")); // "محمد"
}

// 3.3 إضافة أفعال جديدة
دالة مثال_أفعال_مخصصة() {
  متغير محرك = محرك_معادلات_لغوية();
  متغير محلل = محرك.محلل();
  
  // إضافة فعل جديد
  محلل.أضف_فعل("طار", "Go");
  محلل.أضف_فعل("سبح", "Go");
  محلل.أضف_فعل("قفز", "Go");
  
  // استخدام الأفعال الجديدة
  متغير طائر = معادلة_أم("طائر");
  محرك.سجل_كائن("طائر", طائر);
  
  محرك.نفذ_جملة("طار طائر");
  اطبع("الطائر طار!");
}

// ============================================
// 4. مثال متكامل - Integrated Example
// ============================================

دالة مثال_متكامل() {
  اطبع("=== مثال متكامل: مصنع الأثاث ===");
  
  // 1. إنشاء المواد الخام
  متغير خشب = معادلة_أم("خشب");
  خشب.خاصية_ثابتة("نوع", "بلوط");
  خشب.حالة("كمية", 100);
  
  متغير مسامير = معادلة_أم("مسامير");
  مسامير.حالة("عدد", 500);
  
  متغير دهان = معادلة_أم("دهان");
  دهان.حالة("لون", "بني");
  
  // 2. عملية التصنيع
  اطبع("\n--- بدء التصنيع ---");
  
  // تحويل الخشب (قطع)
  متغير قطع_خشب = فكك(خشب, 10);
  اطبع("تم تقطيع الخشب إلى " + قطع_خشب.طول + " قطع");
  
  // تجميع الكرسي
  متغير وصفة_كرسي = {
    "نوع": "كرسي",
    "ارتفاع": 90,
    "عرض": 45
  };
  
  متغير كرسي = أنشئ([قطع_خشب[0], قطع_خشب[1], مسامير], وصفة_كرسي);
  اطبع("تم صنع كرسي");
  
  // دهان الكرسي
  حول(كرسي, {"لون": دهان.حالة("لون")});
  اطبع("تم دهان الكرسي باللون " + كرسي.حالة("لون"));
  
  // 3. النقل والتسليم
  اطبع("\n--- النقل والتسليم ---");
  
  متغير مصنع = معادلة_أم("مصنع");
  متغير شاحنة = معادلة_أم("شاحنة");
  متغير زبون = معادلة_أم("زبون");
  
  // وضع الكرسي في الشاحنة
  احتوي(شاحنة, كرسي);
  اطبع("تم تحميل الكرسي في الشاحنة");
  
  // نقل الشاحنة
  انتقل(شاحنة, "مصنع", "منزل_الزبون");
  اطبع("وصلت الشاحنة إلى " + شاحنة.حالة("موقع"));
  
  // تسليم الكرسي
  أطلق(شاحنة, كرسي);
  نقل(كرسي, مصنع, زبون, "ملكية");
  اطبع("تم تسليم الكرسي للزبون");
  
  اطبع("\n=== انتهى المثال ===");
}

