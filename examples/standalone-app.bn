class TaskManager {
    constructor() {
        this.tasks = [];
        this.nextId = 1;
    }
    
    addTask(title) {
        const task = new Task(this.nextId, title, false);
        this.tasks.push(task);
        this.nextId = this.nextId + 1;
        console.log(`âœ… Task added: ${title}`);
        return task;
    }
    
    removeTask(id) {
        const index = this.findTaskIndex(id);
        if (index >= 0) {
            const task = this.tasks[index];
            this.tasks.splice(index, 1);
            console.log(`ğŸ—‘ï¸  Task removed: ${task.title}`);
            return true;
        }
        console.log(`âŒ Task not found: ${id}`);
        return false;
    }
    
    toggleTask(id) {
        const task = this.findTask(id);
        if (task) {
            task.toggle();
            const status = task.completed ? "completed" : "pending";
            console.log(`ğŸ”„ Task ${id} marked as ${status}`);
            return true;
        }
        console.log(`âŒ Task not found: ${id}`);
        return false;
    }
    
    listTasks() {
        if (this.tasks.length === 0) {
            console.log("ğŸ“ No tasks yet. Add some tasks to get started!");
            return;
